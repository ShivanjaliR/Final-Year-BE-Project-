<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
   	android:layout_height="fill_parent" 
   	android:background="@drawable/back78">
   	
<RelativeLayout
	android:layout_width="fill_parent" 
	android:layout_height="1104dp">
	<TextView 
	    android:id="@+id/text_rec_user" 
	    android:text="@string/text_vm_account" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:layout_alignParentTop="true" 
	    android:layout_marginTop="41dp"
	    android:layout_marginLeft="16dp">
	</TextView>
	<EditText 
	    android:layout_width="wrap_content" 
	    android:id="@+id/edit_rec_user" 
	    android:layout_height="wrap_content" 
	    android:layout_below="@+id/text_rec_user" 
	    android:layout_alignParentLeft="true" 
	    android:layout_marginLeft="16dp" 
	    android:layout_marginTop="14dp" 
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="16dp" android:enabled="false">
	</EditText>
	<TextView 
	     android:id="@+id/text_rec_bal" 
	     android:text="@string/text_balance" 
	     android:layout_width="wrap_content" 
	     android:textAppearance="?android:attr/textAppearanceMedium"
	     android:layout_height="wrap_content" 
	     android:layout_below="@+id/edit_rec_user" 
	     android:layout_marginTop="16dp"
	     android:layout_alignLeft="@+id/text_rec_user">
	 </TextView>
	<EditText 
	      android:layout_width="wrap_content" 
	      android:id="@+id/edit_rec_bal" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/text_rec_bal" 
	      android:layout_alignLeft="@+id/edit_rec_user" 
	      android:layout_marginTop="16dp" 
	      android:layout_alignRight="@+id/edit_rec_user" android:enabled="false">
	</EditText>
	<TextView 
	      android:id="@+id/text_rec_bankname" 
	      android:text="@string/text_bankname" 
	      android:layout_width="wrap_content" 
	      android:textAppearance="?android:attr/textAppearanceMedium" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/edit_rec_bal" 
	      android:layout_marginTop="16dp" 
	      android:layout_alignLeft="@+id/text_rec_user">
	</TextView>
	<EditText 
	      android:layout_width="wrap_content" 
	      android:id="@+id/edit_rec_bankname" 
	      android:inputType="text" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/text_rec_bankname" 
	      android:layout_alignLeft="@+id/edit_rec_user" 
	      android:layout_marginTop="16dp" 
	      android:layout_alignRight="@+id/edit_rec_user" android:editable="false" android:enabled="false">
	</EditText>
	<TextView 
	      android:id="@+id/text_rec_bankacc" 
	      android:text="@string/text_account_number" 
	      android:layout_width="wrap_content" 
	      android:textAppearance="?android:attr/textAppearanceMedium" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/edit_rec_bankname" 
	      android:layout_alignLeft="@+id/text_rec_user" 
	      android:layout_marginTop="16dp"
	      >
	</TextView>
	
	<EditText
	      android:layout_width="wrap_content" 
	      android:id="@+id/edit_rec_bankacc" 
	      android:inputType="text" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/text_rec_bankacc" 
	      android:layout_marginTop="16dp" 
	      android:layout_alignRight="@+id/edit_rec_user" 
	      android:layout_alignLeft="@+id/edit_rec_user" android:enabled="false">
	 </EditText>
	 
	 <TextView 
	      android:id="@+id/text_rec_moneypt" 
	      android:text="@string/text_money_pts" 
	      android:layout_width="wrap_content" 
	      android:textAppearance="?android:attr/textAppearanceMedium" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/edit_rec_bankacc" 
	      android:layout_alignLeft="@+id/text_rec_user" 
	      android:layout_marginTop="16dp"></TextView>
	<EditText
	      android:layout_width="wrap_content" 
	      android:id="@+id/edit_rec_moneypt" 
	      android:inputType="number" 
	      android:layout_height="wrap_content" 
	      android:layout_below="@+id/text_rec_moneypt" 
	      android:layout_marginTop="16dp" 
	      android:layout_alignRight="@+id/edit_rec_user" 
	      android:layout_alignLeft="@+id/edit_rec_user">
	</EditText>
	      
	<Button android:layout_height="wrap_content"
		  android:layout_width="wrap_content"
		  android:id="@+id/recharge" 
		  android:text="Recharge" 
		  android:layout_below="@+id/edit_rec_moneypt"
		  android:onClick="recharge"
		  android:layout_marginLeft="25dp"
		  android:layout_marginTop="23dp">
	</Button>
	<Button android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:onClick="cancel" 
			android:text="Cancel" 
			android:id="@+id/cancel" 
			android:layout_alignBaseline="@+id/recharge" 
			android:layout_alignBottom="@+id/recharge" 
			android:layout_toRightOf="@+id/text_rec_bankacc" 
			android:layout_marginLeft="36dp"></Button>
	
</RelativeLayout>
</ScrollView>
